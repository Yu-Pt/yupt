#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    double x1, x2, y1, y2, a, b, P, S;
    cin >> x1 >> y1 >> x2 >> y2;
    cout << "(" << x1 << ";" << y2 << ")   (" << x2 << ";" << y2 << ")" << endl;
    cout << "(" << x1 << ";" << y1 << ")   (" << x2 << ";" << y1 << ")" << endl;
    a = abs(x2-x1);
    b = abs(y2-y1);
    P = a*2+b*2;
    S = a*b;
    cout << "P=" << P << endl;
    cout << "S=" << S;
    return 0;
}
