#include <iostream>
#include <clocale>
#include <math.h>
using namespace std;

int RingS(float R1, float R2) {
	float S;
	cin >> R1 >> R2;
	S = 3.14 * R1 * R1 - 3.14 * R2 * R2;
	return S;
}

int main()
{
	setlocale(LC_ALL, "Russian");
	float R1 = 0, R2 = 0;
	cout << "Площадь кольца - " << RingS(R1, R2) << endl;
	cout << "Площадь кольца - " << RingS(R1, R2) << endl;
	cout << "Площадь кольца - " << RingS(R1, R2) << endl;
	return 0;
}
