#include <iostream>
using namespace std;
int main()
{
	double V1, V2, S, T, v, ST;
	cout << "Speed of the first car is" << endl;
	cin >> V1;
	cout << "Speed of the second car is" << endl;
	cin >> V2;
	cout << "Distance between them is" << endl;
	cin >> S;
	cout << "Enter the time" << endl;
	cin >> T;
	v = V1 + V2;
	ST = v * T + S;
	cout << "The distance between them in " << T << " hours will be " << ST;
	return 0;
}
